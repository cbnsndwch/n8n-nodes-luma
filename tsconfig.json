{
    "compilerOptions": {
        "target": "ES2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2023",
            "ES2022.error"
        ],
        "strict": true,
        "removeComments": true,
        "useUnknownInCatchVariables": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "incremental": true,
        "declaration": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "outDir": "./dist/",
    },
    "include": [
        "credentials/**/*",
        "nodes/**/*",
        "nodes/**/*.json",
        "index.ts",
        "package.json",
    ]
}